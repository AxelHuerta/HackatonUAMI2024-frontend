---
import Navbar from "@/components/Navbar";
import "@/styles/globals.css";

// import Navbar from "@/components/Navbar";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar client:load />
    <main>
      <slot />
    </main>

    <footer class="bg-black text-white p-12 pt-24">
      <span class="font-black font-2xl">Medi Guía App</span>
      <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        <span class="mx-4">Política de privacidad</span>
        <span class="mx-4">Terminos y condiciones</span>
        <span class="mx-4">Política de cookies</span>
        <span class="mx-4">Contacto</span>
      </div>
    </footer>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style>
